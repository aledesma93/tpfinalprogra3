@* Views/Incidents/Index.cshtml *@
@{
    ViewData["Title"] = "Incidencias";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Incidencias</h2>
    <div>
        <a asp-action="Create" class="btn btn-primary">Nueva incidencia</a>
    </div>
</div>

<div class="card mb-3 table-filter">
    <div class="card-body">
        <form class="row g-2">
            <div class="col-sm-3">
                <input class="form-control" placeholder="Buscar #, cliente, texto..." />
            </div>
            <div class="col-sm-2">
                <select class="form-select">
                    <option selected>Estado</option>
                    <option>Abierto</option>
                    <option>Asignado</option>
                    <option>En Análisis</option>
                    <option>Resuelto</option>
                    <option>Cerrado</option>
                    <option>Reabierto</option>
                </select>
            </div>
            <div class="col-sm-2">
                <select class="form-select">
                    <option selected>Prioridad</option>
                    <option>Alta</option>
                    <option>Media</option>
                    <option>Baja</option>
                </select>
            </div>
            <div class="col-sm-3">
                <select class="form-select">
                    <option selected>Asignado a</option>
                    <option>Yo</option>
                    <option>Usuario 1</option>
                    <option>Usuario 2</option>
                </select>
            </div>
            <div class="col-sm-2 d-grid">
                <button class="btn btn-outline-secondary">Filtrar</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Cliente</th>
                    <th>Tipo</th>
                    <th>Prioridad</th>
                    <th>Estado</th>
                    <th>Asignado</th>
                    <th>Creado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i <= 8; i++)
                {
                    <tr>
                        <td><a asp-action="Details" asp-route-id="@i">INC-2025-@i.ToString("000")</a></td>
                        <td>Cliente @i</td>
                        <td>Soporte</td>
                        <td><span class="badge text-bg-danger">Alta</span></td>
                        <td><span class="badge text-bg-secondary">Abierto</span></td>
                        <td>Telefonista @((i % 3) + 1)</td>
                        <td>@DateTime.Now.AddDays(-i).ToShortDateString()</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@i">Ver</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <span class="text-muted">Mostrando 1–8 de 8</span>
        <nav>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item disabled"><span class="page-link">«</span></li>
                <li class="page-item active"><span class="page-link">1</span></li>
                <li class="page-item disabled"><span class="page-link">»</span></li>
            </ul>
        </nav>
    </div>
</div>
